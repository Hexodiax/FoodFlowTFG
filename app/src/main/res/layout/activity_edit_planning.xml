                            android:textColor="@android:color/black"/>

                        <Button
                            android:id="@+id/btn_cena_Sabado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cambiar"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- DOMINGO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:text="Domingo"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/primary_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/comida_Domingo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Comida: No seleccionada"
                            android:textColor="@android:color/black"/>

                        <Button
                            android:id="@+id/btn_comida_Domingo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cambiar"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/cena_Domingo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cena: No seleccionada"
                            android:textColor="@android:color/black"/>

                        <Button
                            android:id="@+id/btn_cena_Domingo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cambiar"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Botón Guardar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuardarPlanning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Guardar Cambios"
                    app:backgroundTint="@android:color/holo_green_dark"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>